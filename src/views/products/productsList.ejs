                                 <h3><%= libro.titulo %> </h3> 
                                 <article class="artImagen">
                                          <a href="product/detail/<%= libro.id %>"><img  clss="imagenLibroHome"src="/images/products/<%= libro.imagen %>" alt=<%= libro.titulo %>>
                                
                                   <!--   div class="product__info">
                                </div>
                                 -->
                                </a> 
                                 </article>
                           
                                
                                  <article class="precio"><b>  $<%= libro.precio %> </b>
                                
                                    <span class="carritoHome"> <i class="fa-solid fa-cart-shopping"></i> </span> 
                                </article>   
                                     
                                    
                            </article>
                        <% }) %>  
                        </article>
            </section>


         
           
        </main>

    <footer>
        
        <%- include ("../partials/footer.ejs")%>
